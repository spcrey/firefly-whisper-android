<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ic_splash"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_splash"
        app:layout_constraintBottom_toTopOf="@+id/text_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_splash"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:alpha="0.0"
        android:gravity="center"
        android:text="萤  语"
        android:textColor="@color/firefly"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_splash" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_statement_term"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/bg_statement_term_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_light_gray_r8dp_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_statement_term_title"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:alpha="0.8"
            android:gravity="center"
            android:text="@string/title_statement_term"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bg_statement_term_title"
            app:layout_constraintLeft_toLeftOf="@+id/bg_statement_term_title"
            app:layout_constraintRight_toRightOf="@+id/bg_statement_term_title"
            app:layout_constraintTop_toTopOf="@+id/bg_statement_term_title" />

        <View
            android:id="@+id/bg_statement_term_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="-6dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="@+id/text_statement_term_content"
            app:layout_constraintLeft_toLeftOf="@+id/bg_statement_term_title"
            app:layout_constraintRight_toRightOf="@+id/bg_statement_term_title"
            app:layout_constraintTop_toBottomOf="@+id/bg_statement_term_title" />

        <TextView
            android:id="@+id/text_statement_term_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            android:alpha="0.8"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/bg_statement_term_content"
            app:layout_constraintRight_toRightOf="@+id/bg_statement_term_content"
            app:layout_constraintTop_toTopOf="@+id/bg_statement_term_content" />

        <View
            android:id="@+id/bg_disagree_statement_term"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toTopOf="@+id/btn_agree_statement_term"
            app:layout_constraintLeft_toLeftOf="@+id/bg_statement_term_title"
            app:layout_constraintRight_toRightOf="@+id/bg_statement_term_title"
            app:layout_constraintTop_toBottomOf="@+id/bg_statement_term_content" />

        <TextView
            android:id="@+id/btn_agree_statement_term"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_light_blue_r8dp_bottom"
            android:gravity="center"
            android:text="@string/title_agree_statement_term"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/bg_statement_term_title"
            app:layout_constraintRight_toRightOf="@+id/bg_statement_term_title"
            app:layout_constraintTop_toBottomOf="@+id/bg_disagree_statement_term" />

        <TextView
            android:id="@+id/btn_disagree_statement_term"
            android:layout_width="48dp"
            android:layout_height="18dp"
            android:alpha="0.4"
            android:text="@string/title_disagree_statement_term"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_disagree_statement_term"
            app:layout_constraintLeft_toLeftOf="@+id/bg_disagree_statement_term"
            app:layout_constraintRight_toRightOf="@+id/bg_disagree_statement_term"
            app:layout_constraintTop_toTopOf="@+id/bg_disagree_statement_term" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>