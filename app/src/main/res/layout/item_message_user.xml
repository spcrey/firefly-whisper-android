<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    >

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/bg_white_r4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <TextView
        android:id="@+id/text_time"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:text="13点15分"
        android:gravity="center_vertical|end"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@+id/img_user_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_user_nickname"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@+id/img_user_avatar"
        app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
        app:layout_constraintEnd_toStartOf="@+id/text_time"
        />

    <TextView
        android:id="@+id/text_last_message"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.6"
        app:layout_constraintStart_toStartOf="@+id/text_user_nickname"
        app:layout_constraintEnd_toEndOf="@+id/text_user_nickname"
        app:layout_constraintBottom_toBottomOf="@+id/img_user_avatar"
        />

    <ImageView
        android:id="@+id/bg_new_message_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/bg_circle_pink"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/text_time"
        app:layout_constraintBottom_toBottomOf="@+id/text_last_message"
        />

    <TextView
        android:id="@+id/text_new_message_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="99"
        android:visibility="gone"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/bg_new_message_num"
        app:layout_constraintEnd_toEndOf="@+id/bg_new_message_num"
        app:layout_constraintTop_toTopOf="@+id/bg_new_message_num"
        app:layout_constraintBottom_toBottomOf="@+id/bg_new_message_num"
        />

</androidx.constraintlayout.widget.ConstraintLayout>