<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <TextView
        android:id="@+id/text_title_bar"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:textSize="20sp"
        android:text="信息"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:alpha="0.8"
        android:src="@drawable/ic_back"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/line_title_bar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:alpha="0.5"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_light_gray_r8dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@+id/line_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_user_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="@color/white"
            android:text="加载中"
            android:alpha="0.8"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/img_user_avatar"
            app:layout_constraintBottom_toTopOf="@+id/text_user_personal_signature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_user_personal_signature"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:text="加载中"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_user_nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bg_user_email"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_light_gray_r8dp"
        app:layout_constraintTop_toBottomOf="@+id/bg_user"
        app:layout_constraintStart_toStartOf="@+id/bg_user"
        app:layout_constraintEnd_toEndOf="@+id/bg_user"
        />

    <TextView
        android:id="@+id/text_user_email_title"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:text="邮箱"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="@+id/bg_user_email"
        app:layout_constraintBottom_toBottomOf="@+id/bg_user_email"
        app:layout_constraintStart_toStartOf="@+id/bg_user"
        app:layout_constraintEnd_toStartOf="@+id/text_user_email_content"
        />

    <TextView
        android:id="@+id/text_user_email_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="加载中"
        android:gravity="center_vertical|end"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@+id/text_user_email_title"
        app:layout_constraintBottom_toBottomOf="@+id/text_user_email_title"
        app:layout_constraintStart_toEndOf="@+id/text_user_email_title"
        app:layout_constraintEnd_toEndOf="@+id/bg_user"
        />

    <TextView
        android:id="@+id/btn_follow"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="点击关注"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/btn_pink_r8dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/bg_user_email"
        app:layout_constraintStart_toStartOf="@+id/bg_user_email"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat"
        />

    <TextView
        android:id="@+id/btn_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="聊天"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/btn_light_blue_r8dp"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="@+id/btn_follow"
        app:layout_constraintBottom_toBottomOf="@+id/btn_follow"
        app:layout_constraintStart_toEndOf="@+id/btn_follow"
        app:layout_constraintEnd_toEndOf="@+id/bg_user_email"
        />

</androidx.constraintlayout.widget.ConstraintLayout>