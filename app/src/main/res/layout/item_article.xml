<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_light_gray_r8dp">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/bg_circle_white"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_user_nickname"
        />

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:src="@drawable/ic_delete"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@+id/img_user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/img_user_avatar"
        app:layout_constraintStart_toEndOf="@+id/text_user_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <TextView
        android:id="@+id/text_user_nickname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@+id/img_user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/img_user_avatar"
        app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
        app:layout_constraintEnd_toStartOf="@+id/ic_delete"
        />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:alpha="0.8"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user_avatar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_images"
        app:layout_constraintStart_toStartOf="@+id/img_user_avatar"
        app:layout_constraintEnd_toEndOf="@+id/ic_delete"
        />

    <FrameLayout
        android:id="@+id/fragment_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_content"
        app:layout_constraintBottom_toTopOf="@+id/bg_like"
        app:layout_constraintStart_toStartOf="@+id/text_content"
        app:layout_constraintEnd_toEndOf="@+id/text_content"
        />
    
    <View
        android:id="@+id/bg_like"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_content"
        app:layout_constraintEnd_toStartOf="@+id/bg_comment"
        />

    <View
        android:id="@+id/bg_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/bg_like"
        app:layout_constraintBottom_toBottomOf="@+id/bg_like"
        app:layout_constraintStart_toEndOf="@+id/bg_like"
        app:layout_constraintEnd_toEndOf="@+id/text_content"
        />
    
    <ImageView
        android:id="@+id/ic_like"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_unlike"
        android:alpha="0.8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/bg_like"
        app:layout_constraintBottom_toBottomOf="@+id/bg_like"
        app:layout_constraintStart_toStartOf="@+id/bg_like"
        app:layout_constraintEnd_toStartOf="@+id/text_like_count"
        />

    <TextView
        android:id="@+id/text_like_count"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="点赞"
        android:alpha="0.8"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/ic_like"
        app:layout_constraintBottom_toBottomOf="@+id/ic_like"
        app:layout_constraintStart_toEndOf="@+id/ic_like"
        app:layout_constraintEnd_toEndOf="@+id/bg_like"
        />

    <ImageView
        android:id="@+id/ic_comment"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_comment"
        android:alpha="0.8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/bg_comment"
        app:layout_constraintBottom_toBottomOf="@+id/bg_comment"
        app:layout_constraintStart_toStartOf="@+id/bg_comment"
        app:layout_constraintEnd_toStartOf="@+id/text_comment_count"
        />

    <TextView
        android:id="@+id/text_comment_count"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="评论"
        android:alpha="0.8"
        android:gravity="center_vertical"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/ic_comment"
        app:layout_constraintStart_toEndOf="@+id/ic_comment"
        app:layout_constraintEnd_toEndOf="@+id/bg_comment"
        />

</androidx.constraintlayout.widget.ConstraintLayout>